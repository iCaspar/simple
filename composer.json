  "require": {
    "php": "^8.1",
    "ramsey/uuid": "4.3.1",
    "vlucas/phpdotenv": "5.4.1"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.20",
    "mockery/mockery": "1.5.0",
    "squizlabs/php_codesniffer": "3.6.2",
    "phpstan/phpstan": "1.5.7",
    "vimeo/psalm": "4.22.0",
    "psalm/plugin-phpunit": "0.16.1",
    "psalm/plugin-mockery": "0.9.1"
  },
  "autoload": {
    "psr-4": {
      "ICaspar\\Simple\\": "src/"
